<style>
  /* Basic Reset & Fonts */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  body {
    font-family: "Helvetica Neue", sans-serif;
    line-height: 1.6;
   
  }
  a {
    text-decoration: none;
    color: inherit;
  }

  /* Hero Styles */
  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
 

  }

  .hero-content {
    max-width: 700px;
    background-color: #fff;
    border-radius: 8px;
  }
  .hero-social{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    background-color: #fff;
    border-radius: 16px;
    padding: 0.4rem;
  }
  .hero h1 {
    color: rgb(var(--txt, var(--color_15, color_15))));
    font: var(--fnt, var(--font_5));
    transition: var(--trans, color 0.4s ease 0s);
    white-space: nowrap;
    font-size: 3rem;
    font-weight: bold;
    letter-spacing: 2px;
  }
  .hero h2 {
    font-size: 1.5rem;
    font-weight: 300;
    margin: 1rem 0;
    font-style: italic;
  }
  .hero p {
    margin: 1.5rem 0;
    font-size: 1.1rem;
    opacity: 0.9;
  }
  .hero-buttons .btn,
  .hero-buttons .btn-secondary {
    display: inline-block;
    margin: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }
  .btn {
    background-color: #ffffff;
    color: #000;
    font-weight: bold;
  }
  .btn:hover {
    background-color: #e0e0e0;
  }
  .btn-secondary {
    border: 1px solid #fff;
    color: #fff;
  }
  .btn-secondary:hover {
    background-color: #fff;
    color: #000;
  }
</style>
